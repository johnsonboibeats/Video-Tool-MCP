{
  "$schema": "https://railway.app/schemas/railway.schema.json",
  "name": "image-tool-mcp",
  "variables": {
    "OPENAI_API_KEY": {
      "value": "",
      "isSensitive": true
    },
    "GOOGLE_SERVICE_ACCOUNT_JSON": {
      "value": "",
      "isSensitive": true,
      "isOptional": true
    },
    "PORT": {
      "value": "8080",
      "isOptional": true
    },
    "ALLOWED_ORIGINS": {
      "value": "https://claude.ai,https://web.claude.ai,https://*.claude.ai",
      "isOptional": true
    },
    "MAX_REQUESTS_PER_MINUTE": {
      "value": "100",
      "isOptional": true
    }
  },
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "python server.py --port $PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}